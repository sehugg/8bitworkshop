{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "gen",
        "allowJs": false,
        "checkJs": false,
        "sourceMap": true,
        "target": "es2017",
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "CommonJS",
        "esModuleInterop": true,
        "isolatedModules": true,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    }
}
